<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="config.BestsellerMapper">
	<resultMap id="OrderMap" type="domain.OrderDetail">
		<id	property="bookID"		column="BOOK_ID" />
		<result	property="amount"	column="AMOUNT" />
	</resultMap>
	
	<select id="getBestID" resultMap="OrderMap">
		SELECT BOOK_ID,sum(AMOUNT) FROM ORDER_DETAIL
		GROUP BY BOOK_ID ORDER BY sum(AMOUNT)
	</select>
</mapper>